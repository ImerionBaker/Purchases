<%- include('../../fragments/header.ejs') %>

<main>
  <h2>Lista zamowień</h2>
  <table class="table-list">
    <thead>
      <tr>
        <th>Data</th>
        <th>Imie klienta</th>
        <th>Nazwisko klienta</th>
        <th>Adres dostawy</th>
        <th>Akcje</th>
      </tr>
    </thead>
    <tbody>
      <% for (let order of orders) { %>
      <tr>
        <td><%=order.orderDate.toISOString().split('T') [0] %></td>
        <td><%= order.customerFirstName %></td>
        <td><%= order.customerLastName %></td>
        <td><%= order.deliveryAddress %></td>
        <td>
          <ul class="list-actions">
            <li>
              <a
                href="/order/details/<%=order._id%>"
                class="list-actions-button-details"
                >Szczegóły</a
              >
            </li>
            <li>
              <a
                href="/order/edit/<%=order._id%>"
                class="list-actions-button-edit"
                >Edytuj</a
              >
            </li>
            <li>
              <a
                href="/order/delete/<%=order._id%>"
                class="list-actions-button-delete"
                >Usuń</a
              >
            </li>
          </ul>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <p><a href="/order/add" class="button-add">Dodaj nowe zamowienie</a></p>
</main>

<%- include('../../fragments/footer.ejs') %>
