<main>
  <script
    type="application/javascript"
    src="/js/validationProduktyForm.js"
  ></script>
  <script type="application/javascript" src="/js/validationCommon.js"></script>
  <h2><%= pageTitle %></h2>
  <form
    class="form"
    method="post"
    action="<%=formAction%>"
    novalidate
    onsubmit="return validateForm();"
  >
    <input type="hidden" name="_id" value="<%= products._id %>" />

    <label for="productName"
      >Nazwa: <span class="symbol-required">*</span></label
    >
    <input type="text" name="productName" id="productName" placeholder="2-60
    znaków" value="<%= products.productName %>" <%= (formMode == 'showDetails')
    ? 'disabled' : '' %>/>
    <span id="errorNazwaProduktu" class="error-text"></span>

    <label for="description">Opis: </label>
    <input type="text" name="description" id="description" placeholder="2-200
    znaków" value="<%= products.description %>" <%= (formMode == 'showDetails')
    ? 'disabled' : '' %> />
    <span id="errorOpisProduktu" class="error-text"></span>

    <label for="productCode"
      >Kod towaru: <span class="symbol-required">*</span></label
    >
    <input type="text" name="productCode" id="productCode" placeholder="2-10
    znaków" value="<%= products.productCode %>" <%= (formMode == 'showDetails')
    ? 'disabled' : '' %> />
    <span id="errorKodProduktu" class="error-text"> </span>

    <% if(formMode == 'showDetails') { %>
    <div class="form-buttons">
      <a
        href="/products/edit/<%= products._id %>"
        class="list-actions-button-edit"
        >Edytuj</a
      >
    </div>

    <% } %>
    <div class="form-buttons">
      <p id="errorsSummary" class="error-text"></p>
      <% if (formMode != 'showDetails') {%>
      <!-- <input class="form-button-submit" type="submit" value="<%=btnLabel%>" /> -->
      <input type="submit" value="<%=btnLabel%>" class="form-button-submit" />
      <% } %>
    </div>
  </form>

  <% if(formMode == 'showDetails' || formMode == 'edit') { %>
  <h2>Szczegóły zamowienia</h2>
  <table class="table-list">
    <thead>
      <tr>
        <th>Cena</th>
        <th>Zhika</th>
        <th>Ilość</th>
        <th>Komientarzy</th>
      </tr>
    </thead>
    <tbody>
      <% for(let p of products.orderdetails) { %>
      <tr>
        <td><%=p.cost%></td>
        <td><%= p.discount%></td>
        <td><%= p.amount%></td>
        <td><%= p.comments%></td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <br />
  <div class="form-buttons">
    <% if (formMode != 'showDetails') { %>
    <!-- <input class="form-button-submit" type="submit" value="<%=btnLabel%>" /> -->
    <a class="form-button-cancel" href="/products">Anuluj</a>
    <% } else { %>
    <a class="form-button-cancel" href="/products">Powrót</a>
    <% } %>
  </div>
  <% } %>

