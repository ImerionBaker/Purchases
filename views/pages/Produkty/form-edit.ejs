<%- include('../../fragments/header.ejs') %>

    <script
      type="application/javascript"
      src="/js/validationCommon.js"
    ></script>
    <script
      type="application/javascript"
      src="/js/validationProduktyForm.js"
    ></script>

    <main>
      <h2>Edycja produktu</h2>
      <form class="form" novalidate onsubmit="return validateForm();">
        <label for="nazwaProduktu">Nazwa produktu: <span class="symbol-required">*</span></label>
        <input
          type="text"
          name="nazwaProduktu"
          id="nazwaProduktu"
          value="Laptop"
          required
        />
        <span id="errorNazwaProduktu" class="error-text"></span>

        <label for="opisProduktu">Opis: </label>
        <input
          type="text"
          name="opisProduktu"
          id="opisProduktu"
          value="Laptop 1tb MDJ485D"
        />
        <span id="errorOpisProduktu" class="error-text"></span>

        <label for="kodProduktu">Kod towaru: <span class="symbol-required">*</span></label>
        <input
          type="number"
          name="kodProduktu"
          id="kodProduktu"
          value="1234567890"
          required
        />
        <span id="errorKodProduktu" class="error-text"></span>

        <div class="form-buttons">
          <p id="errorsSummary" class="error-text"></p>
          <input type="submit" value="Dodaj" class="form-button-submit" />
          <a href="/products" class="form-button-cancel">Anuluj</a>
        </div>
      </form>
    </main>

    <%- include('../../fragments/footer.ejs') %>
