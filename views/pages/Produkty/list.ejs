<%- include('../../fragments/header.ejs') %>

<main>
  <h2>Lista produktów</h2>
  <table class="table-list">
    <thead>
      <tr>
        <th>Nazwa</th>
        <th>Opis</th>
        <th>Kod towaru</th>
        <th>Akcje</th>
      </tr>
    </thead>
    <tbody>
      <% for (let products of prods) { %>
      <tr>
        <td><%= products.productName %></td>
        <td><%= products.description %></td>
        <td><%= products.productCode %></td>
        <td>
          <ul class="list-actions">
            <li>
              <a
                href="/products/details/<%=products._id%>"
                class="list-actions-button-details"
                >Szczegóły</a
              >
            </li>
            <li>
              <a
                href="/products/edit/<%=products._id%>"
                class="list-actions-button-edit"
                >Edytuj</a
              >
            </li>
            <li>
              <a
                href="/products/delete/<%=products._id%>"
                class="list-actions-button-delete"
                >Usuń</a
              >
            </li>
          </ul>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <p><a href="/products/add" class="button-add">Dodaj nowy produkt</a></p>
</main>

<%- include('../../fragments/footer.ejs') %>
