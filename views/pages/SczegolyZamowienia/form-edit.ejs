<%- include('../../fragments/header.ejs') %>
    <script
    type="application/javascript"
    src="/js/validationCommon.js"
  ></script>
  <script
    type="application/javascript"
    src="/js/validationSczegolyZamowienia.js"
  ></script>
    <main>
      <h2>Nowe zamowienie</h2>
      <form class="form" novalidate onsubmit="return validateForm();">
        <label for="cenaZamowienia">Cena zamowienia: <span class="symbol-required">*</span></label>
        <input
          type="number"
          name="cenaZamowienia"
          id="cenaZamowienia"
          value="5700"
          required
        />
        <span id="errorCenaZamowienia" class="error-text"></span>

        <label for="znizkaNaZamowienie">Zniżka: </label>
        <input
          type="number"
          name="znizkaNaZamowienie"
          id="znizkaNaZamowienie"
          value="10.0"
        />
        <span id="errorZnizkaNaZamowienie" class="error-text"></span>

        <label for="iloscZamowien">Ilość: <span class="symbol-required">*</span></label>
        <input
          type="number"
          name="iloscZamowien"
          id="iloscZamowien"
          value="3"
          required
        />
        <span id="errorIloscZamowien" class="error-text"></span>

        <label for="komientarzyDoZamowienia">Komientarzy: </label>
        <input
          type="text"
          name="komientarzyDoZamowienia"
          id="komientarzyDoZamowienia"
          value="Сoment smth"
        />
        <span id="errorKomientarzyDoZamowienia" class="error-text"></span>
        <div class="form-buttons">
          <p id="errorsSummary" class="error-text"></p>
          <input type="submit" value="Dodaj" class="form-button-submit" />
          <a href="/orderDetails" class="form-button-cancel">Anuluj</a>
        </div>
      </form>
    </main>

    <%- include('../../fragments/footer.ejs') %>
